.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #6B47ED;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.app-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
}

.app-title {
  color: white;
  font-size: 36rpx;
  font-weight: 500;
}

.welcome-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.welcome-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.welcome-hint {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

.theme-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  margin-bottom: 40rpx;
}

.theme-btn {
  background: rgba(255, 255, 255, 0.2);
  border: none;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.theme-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.bottom-area {
  width: 100%;
  margin-top: auto;
}

.history-buttons {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.history-btn {
  background: rgba(255, 255, 255, 0.2);
  border: none;
  color: white;
  font-size: 24rpx;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
}

.history-icon {
  margin-right: 8rpx;
}

.input-area {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 20rpx;
  background: white;
  border-radius: 40rpx;
  margin-bottom: 20rpx;
}

.emoji-btn {
  font-size: 40rpx;
}

.word-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  background: transparent;
}

.send-btn {
  width: 50rpx;
  height: 50rpx;
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.3;
  transition: all 0.3s ease;
}

.send-btn.active {
  opacity: 1;
  cursor: pointer;
}

.send-icon {
  width: 40rpx;
  height: 40rpx;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  text-align: center;
  margin-top: 20rpx;
}

/* 新增卡片样式 */
.ai-card {
  background: #F8FBFF;  /* 浅蓝色背景 */
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.word-image {
  width: 100%;
  height: 800rpx;  /* 根据实际需求调整 */
  border-radius: 12rpx;
}

.audio-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 10rpx 0;
}

.play-button {
  width: 80rpx;
  height: 80rpx;
  background: #4A90E2;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.play-icon {
  width: 40rpx;
  height: 40rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #E0E0E0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-inner {
  width: 0%;  /* 通过JS控制进度 */
  height: 100%;
  background: #4A90E2;
  border-radius: 4rpx;
}

/* 播放按钮样式 */
.audio-control {
  position: absolute;
  left: 40rpx;
  bottom: 40rpx;
  width: 80rpx;
  height: 80rpx;
  background: #4A90E2;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(74, 144, 226, 0.3);
}

.play-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 二维码样式 */
.qr-code {
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
}

.chat-list {
  padding: 30rpx;
  background: #F6F6F6;
  height: calc(100vh - 180rpx); /* 调整高度，留出底部输入框空间 */
}

.chat-item {
  margin-bottom: 30rpx;
}

.chat-item-inner {
  display: flex;
  align-items: flex-start;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.content-wrapper {
  flex: 1;
  max-width: calc(100% - 100rpx);
}

.nickname {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

/* 用户消息气泡 */
.message-bubble {
  display: inline-block;
  padding: 16rpx 24rpx;
  background: #007AFF;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  max-width: 100%;
  word-break: break-all;
}

